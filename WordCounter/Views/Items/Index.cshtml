@using WordCounter.Models;

<h1>Word Counter Game</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no items in your to do list!</p>
}
@if(Model.Count != 0)
{
  foreach (Item item in Model)
  {
    <li>Word: @item.Word, Sentence: @item.Sentence, Count: @item.Count</li>
  }
}

</ul>
<a href="/items/new">Add a new set of a word and sentence.</a>
